syntax on

" show matching braces
set showmatch

set number
set cursorline

colorscheme jellybeans

" Better search
set ignorecase
set smartcase
set incsearch

" Disable annoying error noise
set noerrorbells visualbell t_vb=

" Makes lightline work
set laststatus=2

" Removes redundant --INSERT--
set noshowmode

let g:lightline = { 'colorscheme': 'darcula', }
